service cloud.firestore {
  match /databases/{database}/documents {
   match /books
    {
      allow read: if true;
      allow write: if checkadmin();
    
    }
     match /printings
    {
      allow read: if true;
      allow write: if true;
    
    }   match /printings/{pID}
    {
      allow read: if true;
      allow write: if true;
    
    }
    
    match /books/{bookID}
    {
      allow read: if true;
      allow write: if checkadmin();
    
    }
      match /books/{bookID}/popularity
      {
        allow read:if true;
        allow write:if true;
      }

       match /books/{bookID}/chapters/{chapterID}
      {
        allow read:if true;
        allow write:if checkadmin();
      }
       match /books/{bookID}/chapters/{chapterID}/popularity
      {
        allow read:if true;
        allow write:if true;
      }
       match /newspapers
    {
      allow read: if true;
      allow write:if checkadmin();
     
    }
     match /newspapers/{bookID}
    {
      allow read: if true;
      allow write:if checkadmin();
     
    }
		 match /newspapers/{bookID}/popularity
      {
        allow read:if true;
        allow  write:if true;
      }

       match /newspapers/{bookID}/chapters/{chapterID}
      {
        allow read:if true;
        allow write:if checkadmin();
      }
       match /newspapers/{bookID}/chapters/{chapterID}/popularity
      {
        allow read:if true;
        allow write:if true;
      }
       match /notes
    {
      allow read: if true;
      allow write:if checkadmin();
     
    }
     match /notes/{bookID}
    {
      allow read: if true;
      allow write:if checkadmin();
     
    }
		
     match /notes/{bookID}/popularity
      {
        allow read:if true;
        allow write:if true;
      }
       match /notes/{bookID}/chapters/{chapterID}
      {
        allow read:if true;
        allow write:if checkadmin();
      }
       match /notes/{bookID}/chapters/{chapterID}/popularity
      {
        allow read:if true;
        allow write:if true;
      }
       match /manuscripts
    {
      allow read: if true;
      allow write:if checkadmin();

    }
     match /manuscripts/{bookID}
    {
      allow read: if true;
      allow write:if checkadmin();

    }
		      match /manuscripts/{bookID}/popularity
      {
        allow read:if true;
        allow  write:if true;
      }
        match /manuscripts/{bookID}/chapters/{chapterID}
      {
        allow read:if true;
        allow write:if checkadmin();
      }
      match /manuscripts/{bookID}/chapters/{chapterID}/popularity
      {
        allow read:if true;
        allow write:if true;
      }
       match /posters
    {
      allow read: if true;
      allow write:if checkadmin();
    
    }
     match /posters/{bookID}
    {
      allow read: if true;
      allow write:if checkadmin();
    
    }
		  match /posters/{bookID}/popularity
      {
        allow read:if true;
        allow  write:if true;
      }
        match /posters/{bookID}/chapters/{chapterID}
      {
        allow read:if true;
        allow write:if checkadmin();
      }
       match /posters/{bookID}/chapters/{chapterID}/popularity
      {
        allow read:if true;
        allow write:if true;
      }
       match /photoalbums
    {
      allow read: if true;
      allow write:if checkadmin();
      
    }
    match /photoalbums/{bookID}
    {
      allow read: if true;
      allow write:if checkadmin();
      
    }
		match /photoalbums/{bookID}/popularity
      {
        allow read:if true;
        allow  write:if true;
      }
        match /photoalbums/{bookID}/chapters/{chapterID}
      {
        allow read:if true;
        allow write:if checkadmin();
      }
       match /photoalbums/{bookID}/chapters/{chapterID}/popularity
      {
        allow read:if true;
        allow write:if true;
      }
   match /properties/{p_id}
    {
      allow read: if true;
      allow write:if checkadmin();
    }

    match /tickets/{userID}
    {
      allow read: if true;
      allow write:if true;
    }
	
  match /users {  
    allow read:if request.auth != null;
    allow write:if request.auth != null;
  
    }
    match /users/{userID} {  
    allow read:if request.auth != null;
    allow write:if request.auth != null;
  
    }
     match /users/{userID}/favorites/{fid}
    {
      allow read: if true;
      allow write: if request.auth != null;
    }
     match /users/{userID}/bookmarks/{bid}
    {
      allow read: if true;
      allow write: if request.auth != null;
    }


    match /users/{userID}/language
    {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /users/{userID}/terms
    {
      allow read: if true;
      allow write: if request.auth != null;
    }

     match /users/{userID}/theme
    {
      allow read: if true;
      allow write:if request.auth != null;
    }
    match /users/{userID}/member
    {
      allow read: if true;
      allow write:if checkadmin();
    }

     match /users/{userID}/member_id
    {
      allow read: if true;
      allow write:if checkadmin();
    }
    match /users/{userID}/admin
    {
      allow read: if true;
      allow write:if checkadmin();
    }

     function checkadmin() {
        return (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.admin==true);
    }
   
  }
}
