rules_version = '2';
service firebase.storage {
    match /b/{bucket}/o {
    match /sitemap.xml {
      allow read :if true;
      allow write:if request.auth!=null;
      allow create:if request.auth!=null;
    }

    match /{profile}/{bid}/chapters/{cid}/book.pdf {
      allow read :if true;
      allow write:if request.auth!=null;
      allow create:if request.auth!=null;
    }
     match /{profile}/{bid}/chapters/{cid}/thumbnail.jpg {
      allow read :if true;
      allow write:if request.auth!=null;
      allow create:if request.auth!=null;
    }
     match /{profile}/{bid}/thumbnail.jpg {
       allow read :if true;
      allow write:if request.auth!=null;
      allow create:if request.auth!=null;
    }
    }
}

