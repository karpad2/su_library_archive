{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      },
      {
        "source": "sitemap.xml",
        "function": "buildSitemap"
      }
    ],
    "headers": [
      {
        "source": "/**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000"
          }
        ]
      },
      {
        "source": "manifest.json",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=31536000"
          }
        ]
      },
      {
        "source": "**",
        "headers": [
          {
            "key": "Access-Control-Allow-Origin",
            "value": "*"
          },
          {
            "key": "Access-Control-Allow-Methods",
            "value": "DELETE, POST, GET, OPTIONS"
          },
          {
            "key": "Access-Control-Allow-Headers",
            "value": "Content-Type, Access-Control-Allow-Headers, Authorization, X-Requested-With"
          }
        ]
      }
    ]
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "functions": {
    "source": "functions",
    "predeploy": "npm --prefix \"$RESOURCE_DIR\" run build"
  },
  "emulators": {
    "functions": {
      "port": 6001,
      "host": "0.0.0.0"
    },
    "firestore": {
      "port": 6009,
      "host": "0.0.0.0"
    },
    "hosting": {
      "port": 6003,
      "host": "0.0.0.0"
    },
    "storage": {
      "port": 6004,
      "host": "0.0.0.0"
    },
    "ui": {
      "enabled": true,
      "port": 8001,
      "host": "0.0.0.0"
    },
    "auth": {
      "port": 6007,
      "host": "0.0.0.0"
    },
    "database": {
      "port": 6005,
      "host": "0.0.0.0"
    },
    "pubsub": {
      "port": 6006,
      "host": "0.0.0.0"
    }
  }
}
